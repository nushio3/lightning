name:                lightning-paper7
version:             0.1.0.0
synopsis:            Study lightning distribution in protoplanetary disks
-- description:         
homepage:            paraiso-lang.org
license:             AllRightsReserved
license-file:        LICENSE
author:              TakayukiMuranushi
maintainer:          muranushi@gmail.com
-- copyright:           
category:            Physics
build-type:          Simple
cabal-version:       >=1.8

Data-Files:          material/aastex.cls
                     material/template.tex

library
  exposed-modules:   
    Data.Reflection.Typed
    Figure.DiskSection
    Figure.Gnuplot
    Figure.Shake
    GlobalConfig
    HereDocument
    Model.Concepts
    Model.Constants
    Model.Disk.Hayashi
    Model.Dust
    Model.Values
    Paper
    Paper.SectionAcknowledgement
    Paper.SectionModel
    Paper.SectionObservation

    UnitTyped.Synonyms

  other-modules:     Paths_lightning_paper7
  build-depends:     
      base ==4.*

    , authoring >= 0.2
    , containers 
    , data-default >= 0.5.3
    , HaTeX >= 3.6
    , lens >= 3.9.0.2
    , mtl
    , process   
    , reflection >= 1.3.2
    , tagged
    , template-haskell
    , text
    , transformers
    , shake
    , unittyped >= 0.3.1

  Ghc-Options:       -Wall -O2
  hs-source-dirs:    src/



executable make-paper
  main-is:           make-paper.hs           
  Ghc-Options:       -Wall -O2
  hs-source-dirs:    exe-src/
  Build-Depends:     base
                   , lightning-paper7

                   , directory
                   , process
                   , shake >= 0.10.5

executable make-presentation
  main-is:           make-presentation.hs           
  Ghc-Options:       -Wall -O2
  hs-source-dirs:    exe-src/
  Build-Depends:     base
                   , lightning-paper7

                   , directory
                   , process
                   , shake >= 0.10.5

executable make-figures
  main-is:           make-figures.hs           
  Ghc-Options:       -Wall -O2
  hs-source-dirs:    exe-src/
  Build-Depends:     base
                   , lightning-paper7

                   , process
                   , unittyped
